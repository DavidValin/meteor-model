{
  "version": "1.7.5",
  "compilerOptions": {
    "target": "es3",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./src-js",
    "rootDir": "./ts/",
    "sourceMap": true
  },
  "filesGlob": [
    "./typings/**/*.ts",
    "./src/**/*.ts",
    "./specs/**/*.ts"
  ],
  "files": [
    "./typings/es6-promise/es6-promise.d.ts",
    "./typings/jasmine/jasmine.d.ts",
    "./typings/jasmine/legacy/jasmine-1.3.d.ts",
    "./typings/mocha/mocha.d.ts",
    "./typings/node/node.d.ts",
    "./typings/requirejs/require.d.ts",
    "./typings/tsd.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
